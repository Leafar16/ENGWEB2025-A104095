extends layout 
block content 
    header.w3-container.w3-red 
        h2= `Novo Aluno`
    w3.container 
        form.w3-container(method="post")
            fieldset
                legend Metadados
                label Id
                input.w3-input.w3-round(type= "text",name="id")
                label Nome
                input.w3-input.w3-round(type= "text",name="nome")
                label GitLink
                input.w3-input.w3-round(type= "text",name="gitlink")
            
            fieldset
                legend TPC's
                label TPC1
                input.w3-check(type= "checkbox",name="tpc1",value= "1")
                label TPC2
                input.w3-check(type= "checkbox",name="tpc2",value= "1")
                label TPC3
                input.w3-check(type= "checkbox",name="tpc3",value= "1")
                label TPC4
                input.w3-check(type= "checkbox",name="tpc4",value= "1")
                label TPC5
                input.w3-check(type= "checkbox",name="tpc5",value= "1")
                label TPC6
                input.w3-check(type= "checkbox",name="tpc6",value= "1")
                label TPC7
                input.w3-check(type= "checkbox",name="tpc7",value= "1")
                label TPC8
                input.w3-check(type= "checkbox",name="tpc8",value= "1")
            button.w3-btn.w3-grey(type="submit") Register
    